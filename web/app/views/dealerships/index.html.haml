%header
  .row
    .columns
      %h1 Dealerships
      - if can? :create, Dealership
        = link_to 'Add new dealership', new_dealership_path, class: 'button success'
      = link_to 'Profile', edit_profile_path, class: 'button'
%main
  .row
    - if @dealerships.empty?
      .columns
        %p
          No dealerships yet
    - else
      = render @dealerships
